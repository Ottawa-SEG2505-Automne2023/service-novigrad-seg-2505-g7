<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDriverLicense">




    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="612dp"
        android:background="#521471" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="644dp"
        android:text="Service novigrad"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="171dp"
        android:text="Informations demandées:"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/txt_fn"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="206dp"

        android:ems="10"
        android:hint="Nom et prénom"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/txt_address"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="255dp"
        android:ems="10"
        android:hint="Adresse"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="302dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/txt_num"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="330dp"
        android:ems="10"
        android:hint="Telephone"
        android:inputType="text"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="371dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="269dp"
        android:text="Documents réquis pour avoir accès aux services de la sucursale de service novigrad: "
        android:textSize="25dp" />

    <ListView
        android:id="@+id/list_docs"
        android:layout_width="364dp"
        android:layout_height="188dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="69dp" />

    <Button
        android:id="@+id/btn_crs"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="113dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="13dp"
        android:text="Next" />

    <TextView
        android:id="@+id/txt_servN"
        android:layout_width="325dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="562dp"
        android:text="TextView"
        android:textSize="20sp" />

</RelativeLayout>